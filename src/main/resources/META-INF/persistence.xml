<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="DigitalCenter">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>bo.edu.ucbcba.group5.model.Elemento</class>
        <class>bo.edu.ucbcba.group5.model.Juego</class>
        <class>bo.edu.ucbcba.group5.model.Pelicula</class>
        <class>bo.edu.ucbcba.group5.model.Musica</class>
        <class>bo.edu.ucbcba.group5.model.Company</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:derby:DigitalCenter;create=true"/>
            <property name="eclipselink.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
        </properties>
    </persistence-unit>
</persistence>
